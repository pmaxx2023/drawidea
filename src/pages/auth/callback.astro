---
import { createServerSupabaseClient } from '../../lib/supabase';

const responseHeaders = new Headers();
const supabase = createServerSupabaseClient(Astro.request, responseHeaders);

// Get the code from URL params
const code = Astro.url.searchParams.get('code');
const error = Astro.url.searchParams.get('error');
const errorDescription = Astro.url.searchParams.get('error_description');

let authError: string | null = null;

if (error) {
  authError = errorDescription || error;
} else if (code) {
  // Exchange code for session
  const { error: exchangeError } = await supabase.auth.exchangeCodeForSession(code);

  if (exchangeError) {
    authError = exchangeError.message;
  } else {
    // Create redirect response with cookies
    const redirectHeaders = new Headers();
    redirectHeaders.set('Location', '/#create');
    // Copy all Set-Cookie headers
    responseHeaders.forEach((value, key) => {
      redirectHeaders.append(key, value);
    });
    return new Response(null, {
      status: 302,
      headers: redirectHeaders
    });
  }
} else {
  authError = 'No authentication code provided';
}

// If we get here, there was an error - copy any cookies that were set
responseHeaders.forEach((value, key) => {
  Astro.response.headers.append(key, value);
});
